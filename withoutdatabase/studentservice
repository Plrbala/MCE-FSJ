package edu.mce.studentApp.service;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

import org.springframework.stereotype.Service;

import edu.mce.studentApp.model.Student;

@Service
public class StudentService {
	List<Student> student=new ArrayList<>(
			Arrays.asList(new Student(1L,"bala","it",2),
					new Student(2L,"john","cse",4),
					new Student(3L,"mohan","ece",3),
					new Student(4L,"aravidhan","mech",4),
					new Student(5L,"kavin","eee",4)
					)
			);

	public List<Student> getStudent()
	{
		return student;
	}
	
	public void addStudent(Student stud) 
	{
		student.add(stud);
	}
public String updateStudent(Student stud)
	{  int index=0;
		boolean found=false;
		for(int i=0;i<student.size();i++)
		{if(student.get(i).getSid()==stud.getSid())
			{index=i;
				found=true;
				break;
			}	}
		if(!found)
		{
			return " no student record";	}
		else
		{
			student.set(index, stud);
			return " student data update";
		}}
public String deleteStudent(long sid)
{   int index=0;
		boolean found=false;
		for(int i=0;i<student.size();i++)
		{if(student.get(i).getSid()==sid)
			{index=i;
				found=true;
				break;
			}	}
		if(!found)
		{
			return " no student record";	}
		else
		{
			student.remove(index);
			return " student data delete";
		}


}





}
